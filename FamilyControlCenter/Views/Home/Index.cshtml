@using Resources
@{
    ViewBag.Title = Resource.IndexPageTitle;
}

<div class="jumbotron">
    <h1>@Resource.FCCApplicationNameShort</h1>
    <p class="lead">@Resource.FCCIndexWelcomeMessage</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>
            <span class="fas fa-id-card"></span>
            @Resource.PassportView
        </h2>
        <p>
            @Resource.PassportViewDescription
        </p>
        <p>
            <a class="btn btn-default" href="@Url.Action("Person", "Family")">
                @Resource.Goto @*&raquo;*@
                <span class="fas fa-angle-double-right"></span>
            </a>
        </p>
    </div>
</div>
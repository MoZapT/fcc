@using Shared.Enums
@{
    @model Shared.Viewmodels.PersonViewModel
}

<div class="btn-group">
    <button class="btn crud" type="button" args="@((int)ActionCommand.Save)" obj="@Model.Model.Id">
        <i class="glyphicon glyphicon-ok"></i>
    </button>

    @if (Model.Command == ActionCommand.Open)
    {
        <button class="btn crud" type="button" args="@((int)ActionCommand.Delete)" obj="@Model.Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </button>
    }

    <button class="btn crud" type="button" args="@((int)ActionCommand.Cancel)" obj="@Model.Model.Id">
        <i class="glyphicon glyphicon-remove"></i>
    </button>
</div>

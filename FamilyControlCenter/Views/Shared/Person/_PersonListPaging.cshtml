<!-- Paging for Desktop -->
@if (Model.CanBeShown())
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="previous page-item"><a class="page-link" href="?page=@(Model.CurrentPage-1)"><em class="fas fa-angle-double-left"></em> @Resource.Previous</a></li>
        }

        @for (int i = Model.BeginPage; i <= Model.Pages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="active page-item"><a class="page-link" href="?page=@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
            }

            if (i > Model.MaximumPageBtns)
            {
                break;
            }
        }

        @if (Model.Pages > Model.MaximumPageBtns)
        {
            <li class="next page-item"><a class="page-link" href="?page=@Model.Pages">@Resource.Last</a></li>
        }

        @if (Model.CurrentPage < Model.Pages)
        {
            <li class="next page-item"><a class="page-link" href="?page=@(Model.CurrentPage+1)">@Resource.Next <em class="fas fa-angle-double-right"></em></a></li>
        }
    </ul>
}


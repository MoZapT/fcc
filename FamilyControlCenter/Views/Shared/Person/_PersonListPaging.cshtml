<!-- Paging for Desktop -->
@if (Model.CanBeShown())
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="previous"><a href="?page=@(Model.CurrentPage-1)">@Resource.Previous</a></li>
        }

        @for (int i = Model.BeginPage; i <= Model.Pages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="active"><a href="?page=@i">@i</a></li>
            }
            else
            {
                <li><a href="?page=@i">@i</a></li>
            }

            if (i > Model.MaximumPageBtns)
            {
                break;
            }
        }

        @if (Model.Pages > Model.MaximumPageBtns)
        {
            <li class="next"><a href="?page=@Model.Pages">Last *Translate!*</a></li>
        }

        @if (Model.CurrentPage < Model.Pages)
        {
            <li class="next"><a href="?page=@(Model.CurrentPage+1)">@Resource.Next</a></li>
        }
    </ul>
}


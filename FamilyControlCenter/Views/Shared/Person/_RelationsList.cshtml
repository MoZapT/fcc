@using Resources
@using Shared.Helpers
@using Shared.Models
@model PersonRelationChain

@{ 
    //DONT ALLOW DELETE IF LAST RECORD! IN CHILDREN!
    //DONT SHOW OBJECT HIMSELF!
}

@foreach (var person in Model.Children.Persons)
{
    var kvp = new KeyValuePair<string, object>("RelationType", Model.Children.RelationTypeId);
    @Html.Partial("Person/_PersonLineForRelation", person, new ViewDataDictionary() { kvp })
}

@if (Model.Parents != null)
{
    foreach (var person in Model.Parents.Persons)
    {
        var kvp = new KeyValuePair<string, object>("RelationType", Model.Parents.RelationTypeId);
        @Html.Partial("Person/_PersonLineForRelation", person, new ViewDataDictionary() { kvp })
    }
}


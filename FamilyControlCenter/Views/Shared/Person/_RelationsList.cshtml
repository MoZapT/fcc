@using Shared.Enums
@{
    @model Shared.Viewmodels.Family.PersonViewModel
}

@foreach (var rel in Model.Relations)
{
    <div class="row">
        <div class="col-md-10">
            @rel.Lastname @rel.Name @rel.Patronym @rel.RelationTypeId.ToString()
        </div>
        <div class="col-md-2">
            <button id="DestroyRelation" relation-id="@rel.Id" type="button" class="btn btn-secondary" data-dismiss="modal">
                <i class="glyphicon glyphicon-trash"></i>
            </button>
        </div>
    </div>
}

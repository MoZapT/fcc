@using Resources
@using Shared.Helpers
@{
    @model Shared.Viewmodels.PersonViewModel
}

@foreach (var group in Model.Relations)
{
    foreach (var relation in group.Relations)
    {
        var relType = group.RelationTypeId;
        <div class="row">
            <div class="col-md-10">
                @relation.Member.Name
                @(Resource.ResourceManager
                    .GetLocalizedStringForEnumValue(relType.GetType(), relType, relation.Member.Sex))
            </div>
            <div class="col-md-2">
                <button id="DestroyRelation" relation-id="@relation.Id" type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="glyphicon glyphicon-trash"></i>
                </button>
            </div>
        </div>
    }
}

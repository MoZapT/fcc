@model PersonRelationsViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>
            <i class="fas fa-users"></i>
            @Resource.PersonRelations
        </h2>
    </div>
    <div class="panel-body">
        <div class="well well-lg clearfix">
            <div class="row form-group">
                <div class="col-md-6">
                    @Html.Hidden("NewRelationPersonId", "")
                    @Html.TextBox("NewRelationPersonName", "", new { @class = "form-control typeahead", placeholder = "", taname = "PersonTypeahead", taurl = "typeahead/person/" + Model.Person.Id + "/" })
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("NewRelationRelationTypeId", new List<SelectListItem>(), new { @class = "form-control" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12">
                    <button id="SaveRelation" type="button" class="btn btn-primary pull-right">
                        <i class="glyphicon glyphicon-plus-sign"></i>
                        @Resource.Add
                    </button>
                </div>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-12">
                <h4>@Resource.PersonRelations</h4>
            </div>
        </div>
        @foreach (var relationKvp in Model.Relations)
        {
            var relationType = relationKvp.Key;
            foreach (var relation in relationKvp.Value)
            {
                <div class="row item">
                    <div class="col-md-2">
                        @Resource.ResourceManager.GetLocalizedStringForEnumValue(relationType, relation.Sex)
                    </div>
                    <div class="col-md-8">
                        @relation.Name
                    </div>
                    <div class="col-md-2">
                        <button id="DestroyRelation" inviter="@relation.Id" invited="@relation.Id" reltype="@((int)relationType)" type="button" class="btn btn-danger pull-right" data-dismiss="modal">
                            <i class="glyphicon glyphicon-trash"></i>
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>






@model KeyValuePair<string, List<FileContent>>

<div class="row form-group">
    <div class="col-md-12 photo">
        @Html.Label("Foto", Resource.Foto)

        <div id="PhotosCarousel" class="carousel shadow slide" data-ride="carousel" data-interval="false">
            <!-- Indicators -->
            @*<ol class="carousel-indicators">
                @for (int i = 0; i < Model.Value.Count; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#PhotosCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#PhotosCarousel" data-slide-to="@i"></li>
                    }
                }
            </ol>*@

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @if (Model.Value?.Count <= 0)
                {
                    <div class="item active">
                        <img src="~/Content/no-image-available.jpg" alt="No image avaible" class="photo" />
                    </div>
                }

                @for (int i = 0; i < Model.Value.Count; i++)
                {
                    var file = Model.Value[i];
                    string img64 = Convert.ToBase64String(file.BinaryContent);
                    string img64Url = string.Format("data:image/" + file.FileType + ";base64,{0}", img64);

                    if (i == 0)
                    {
                        <div class="item active">
                            <img src="@img64Url" alt="@file.Name" class="photo">
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img src="@img64Url" alt="@file.Name" class="photo">
                        </div>
                    }
                }
            </div>

            @if (Model.Value.Count > 1)
            {
                <!-- Left and right controls -->
                @*<a class="left carousel-control" href="#PhotosCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous*перевести*</span>
                </a>
                <a class="right carousel-control" href="#PhotosCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next*перевести*</span>
                </a>*@
            }
        </div>
    </div>
    <div class="col-md-12">
        @if (Model.Value.Count > 1)
        {
            <!-- Left and right controls -->
            <div class="nopadding col-md-6">
                <a class="custom-carousel-control btn btn-primary btn-edges" href="#PhotosCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">@Resource.Previous</span>
                </a>
            </div>
            <div class="nopadding col-md-6">
                <a class="custom-carousel-control btn btn-primary btn-edges" href="#PhotosCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">@Resource.Next</span>
                </a>
            </div>
        }
    </div>
    <div class="col-md-12">
        <label for="UploadPicture" class="btn btn-primary btn-edges sideslide">
            <i class="fas fa-file-upload"></i>
            <span class="toggle-text">@Resource.BtnLoadPhoto</span>
        </label>
        <input id="UploadPicture" class="hide" type="file" name="files[]" data-multiple-caption="{count} notimplted" multiple="" aria-invalid="false">
    </div>
</div>
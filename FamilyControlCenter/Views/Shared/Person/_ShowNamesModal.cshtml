@using Shared.Helpers
@using Shared.Enums
@using Resources
@model Shared.Models.Person

<a href="#" data-toggle="modal" data-target="#ShowPreviousNamesAndPatronymsModal">
    <i class="fas fa-signature"></i>
    <i class="fas fa-search"></i>
    @Resource.ShowPreviousNamesAndPatronyms
</a>

<div class="modal fade" id="ShowPreviousNamesAndPatronymsModal" tabindex="-1" role="dialog" aria-labelledby="ShowPreviousNamesAndPatronymsModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Resource.ShowPreviousNamesAndPatronyms</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="NamesAndPatronymHistorySections"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resource.Close</button>
            </div>
        </div>
    </div>
</div>
